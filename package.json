{
  "name": "nuxt-layers-prepare",
  "type": "module",
  "version": "1.0.0",
  "packageManager": "pnpm@9.13.2",
  "description": "Nuxt module for preparing Nuxt layers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hywax/nuxt-layers-prepare.git"
  },
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky",
    "prepack": "nuxt-module-build build",
    "release": "pnpm run lint && pnpm run test && pnpm run prepack && changelogen --release --push && pnpm publish",
    "dev": "nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:types": "vue-tsc --noEmit && cd playground && vue-tsc --noEmit"
  },
  "dependencies": {
    "@nuxt/kit": "^3.14.159",
    "consola": "^3.2.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@hywax/tools-eslint": "^1.0.0",
    "@nuxt/devtools": "^1.6.0",
    "@nuxt/module-builder": "^0.8.4",
    "@nuxt/schema": "^3.14.159",
    "@nuxt/test-utils": "^3.14.4",
    "@types/node": "^22.9.0",
    "changelogen": "^0.5.7",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nuxt": "^3.14.159",
    "typescript": "^5.6.3",
    "vitest": "^2.1.5",
    "vue-tsc": "^2.1.10"
  },
  "lint-staged": {
    "*.ts": "pnpm run lint"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
